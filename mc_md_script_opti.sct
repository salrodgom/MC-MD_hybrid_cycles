function update {
  if [ -d RestartInitial ] ; then rm -R RestartInitial ; fi
  cp -R Restart RestartInitial
  cp Movies/System_0/Framework_0_final_1_1_1_P1.cif ../RHO_${framework}_$nAl.cif
}
